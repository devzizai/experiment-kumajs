{
  "name": "kuma",
  "version": "0.0.1",
  "description": "KumaJS",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dashboard -- node dev/server.js",
    "test": "nyc npm run mocha",
    "build": "webpack --config ./config/development/webpack.config.js",
    "dist": "webpack --config ./config/production/webpack.config.js",
    "clean": "rm -fR ./dist ./report ./.nyc_output",
    "mocha": "mocha --require babel-polyfill --compilers js:babel-register -R spec ./specs/**/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kumago/experiment-kumajs.git"
  },
  "keywords": [
    "JavaScript",
    "es5",
    "es6"
  ],
  "author": "kumago",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kumago/experiment-kumajs/issues"
  },
  "homepage": "https://github.com/kumago/experiment-kumajs#readme",
  "engines": {
    "node": ">=7.4.0"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-react-constant-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.12",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "bell-on-bundler-error-plugin": "^1.0.8",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "emoji-reporter": "^0.3.0",
    "enzyme": "^2.7.1",
    "es6-promise": "^4.0.5",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "jsdom": "^9.9.1",
    "jsdom-global": "^2.1.1",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "nyc": "^10.1.2",
    "postcss": "^5.2.11",
    "postcss-loader": "^1.2.2",
    "react-addons-test-utils": "^15.4.2",
    "sass-loader": "^4.1.1",
    "sinon": "^1.17.7",
    "strftime": "^0.10.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-dev-server": "^2.3.0",
    "webpack-hot-middleware": "^2.16.1",
    "webpack-visualizer-plugin": "^0.1.10"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "md5": "^2.2.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "extends": "eslint-config-airbnb",
    "parser": "babel-eslint",
    "settings": {
      "ecmascript": 6
    },
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "destructuring": true,
      "classes": true,
      "forOf": true,
      "blockBindings": true,
      "arrowFunctions": true
    },
    "rules": {
      "indent": 2,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "dev/**/*.js",
            "config/**/*.js",
            "specs/**/*.js"
          ],
          "peerDependencies": false,
          "optionalDependencies": false
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "babel": {
    "presets": [
      ["es2015", { "module": false }],
      "stage-0",
      "stage-1",
      "stage-2",
      "react"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "ava": {
    "babel": "inherit",
    "concurrency": 5,
    "failFast": true,
    "tap": true
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary",
      "html"
    ],
    "report-dir": "./report",
    "sourceMap": true,
    "instrument": true
  }
}
